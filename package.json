{
  "name": "astro-architecture",
  "type": "module",
  "version": "0.0.1",
  "description": "A project to build a static site for testing pages, components and accessibility",
  "author": {
    "name": "Albert Escamilla"
  },
  "scripts": {
    "test": "playwright test",
    "dev": "astro dev --open",
    "dev:host": "astro dev --host",
    "build": "astro build && sass src/components/:dist/css/components/",
    "build:test": "playwright test && astro build && sass src/components/:dist/css/components/",
    "preview": "astro preview",
    "astro": "astro",
    "create:icons": "svg-sprite --symbol --symbol-dest=public/assets/icons public/assets/icons/*.svg && node lib/create-icons-docs.cjs"
  },
  "dependencies": {
    "@astrojs/mdx": "^2.3.1",
    "astro": "^4.6.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "axe-html-reporter": "^2.2.3",
    "@playwright/test": "^1.43.1",
    "@types/node": "^20.12.7",
    "sass": "^1.75.0",
    "svg-sprite": "^2.0.4"
  },
  "license": "MIT"
}